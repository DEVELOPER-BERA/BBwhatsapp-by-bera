<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>BBWhatsapp - Home</title>
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      display: flex;
      height: 100vh;
      background: #f0f2f5;
    }
    /* Sidebar */
    .sidebar {
      width: 30%;
      background: #fff;
      border-right: 1px solid #ddd;
      display: flex;
      flex-direction: column;
    }
    .sidebar-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15px;
      background: #ededed;
    }
    .sidebar-header img {
      width: 40px;
      height: 40px;
      border-radius: 50%;
    }
    .sidebar-search {
      padding: 10px;
      background: #f6f6f6;
    }
    .sidebar-search input {
      width: 100%;
      padding: 8px;
      border: none;
      border-radius: 20px;
      outline: none;
    }
    .sidebar-section {
      flex: 1;
      overflow-y: auto;
    }
    .section-title {
      padding: 10px;
      font-weight: bold;
      background: #f6f6f6;
      color: #555;
      border-top: 1px solid #ddd;
      border-bottom: 1px solid #ddd;
    }
    .chat-item {
      display: flex;
      align-items: center;
      padding: 10px;
      cursor: pointer;
      transition: background 0.2s;
    }
    .chat-item:hover {
      background: #f0f0f0;
    }
    .chat-item img {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      margin-right: 10px;
    }
    .chat-info {
      flex: 1;
    }
    .chat-info h4 {
      margin: 0;
      font-size: 16px;
    }
    .chat-info p {
      margin: 0;
      font-size: 13px;
      color: #777;
    }

    /* Chat area */
    .chat {
      flex: 1;
      display: flex;
      flex-direction: column;
    }
    .chat-header {
      padding: 15px;
      background: #ededed;
      display: flex;
      align-items: center;
      justify-content: space-between;
      border-bottom: 1px solid #ddd;
    }
    .chat-header-info {
      display: flex;
      align-items: center;
    }
    .chat-header-info img {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      margin-right: 10px;
    }
    .chat-messages {
      flex: 1;
      padding: 20px;
      overflow-y: auto;
      background: #ece5dd;
    }
    .message {
      margin-bottom: 15px;
      padding: 10px;
      border-radius: 10px;
      max-width: 60%;
      clear: both;
    }
    .own-message {
      background: #dcf8c6;
      margin-left: auto;
    }
    .other-message {
      background: #fff;
      margin-right: auto;
    }
    .system-message {
      text-align: center;
      color: #888;
      font-size: 12px;
    }
    .chat-form {
      display: flex;
      padding: 10px;
      background: #f0f0f0;
      border-top: 1px solid #ddd;
    }
    .chat-form input {
      flex: 1;
      padding: 10px;
      border-radius: 20px;
      border: none;
      outline: none;
    }
    .chat-form button {
      background: #008069;
      color: #fff;
      border: none;
      border-radius: 50%;
      width: 40px;
      height: 40px;
      margin-left: 10px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <!-- Sidebar -->
  <div class="sidebar">
    <div class="sidebar-header">
      <img src="/images/default-avatar.png" alt="Profile">
      <div>
        <a href="/logout">Logout</a>
      </div>
    </div>
    <div class="sidebar-search">
      <input type="text" placeholder="Search chats or groups...">
    </div>

    <!-- Chats Section -->
    <div class="sidebar-section">
      <div class="section-title">Chats</div>
      <% if (users && users.length > 0) { %>
        <% users.forEach(user => { %>
          <div class="chat-item" onclick="openChat('<%= user.username %>','user')">
            <img src="/images/default-avatar.png" alt="<%= user.username %>">
            <div class="chat-info">
              <h4><%= user.username %></h4>
              <p>Click to chat</p>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p style="padding:10px;color:#777;">No users available</p>
      <% } %>
    </div>

    <!-- Groups Section -->
    <div class="sidebar-section">
      <div class="section-title">Groups</div>
      <% if (groups && groups.length > 0) { %>
        <% groups.forEach(group => { %>
          <div class="chat-item" onclick="openChat('<%= group.name %>','group')">
            <img src="/images/default-group.png" alt="<%= group.name %>">
            <div class="chat-info">
              <h4><%= group.name %></h4>
              <p>Group chat</p>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p style="padding:10px;color:#777;">No groups available</p>
      <% } %>
    </div>
  </div>

  <!-- Chat Area -->
  <div class="chat">
    <div class="chat-header">
      <div class="chat-header-info">
        <img src="/images/default-avatar.png" id="chat-avatar">
        <h4 id="chat-name">Select a chat</h4>
      </div>
      <div>
        <button>üìû</button>
        <button>üé•</button>
        <button>‚ÑπÔ∏è</button>
      </div>
    </div>

    <div class="chat-messages" id="chat-messages">
      <p class="system-message">Select a chat or group to start messaging</p>
    </div>

    <form id="chat-form" class="chat-form">
      <input type="text" id="msg" placeholder="Type a message...">
      <button type="submit">‚û§</button>
    </form>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();
    const chatMessages = document.getElementById('chat-messages');
    const chatForm = document.getElementById('chat-form');
    const messageInput = document.getElementById('msg');
    let currentChat = null;
    let currentChatType = null;

    function openChat(name, type) {
      currentChat = name;
      currentChatType = type;
      document.getElementById('chat-name').innerText = name;
      chatMessages.innerHTML = '';
      socket.emit('joinChat', { name, type });
    }

    socket.on('message', message => {
      const div = document.createElement('div');
      div.classList.add('message');
      if (message.username === '<%= username %>') {
        div.classList.add('own-message');
      } else if (message.username === 'System') {
        div.classList.add('system-message');
      } else {
        div.classList.add('other-message');
      }
      div.innerHTML = `
        <p><strong>${message.username}</strong> <span style="font-size:11px;color:#777;">${new Date(message.timestamp).toLocaleTimeString()}</span></p>
        <p>${message.text}</p>
      `;
      chatMessages.appendChild(div);
      chatMessages.scrollTop = chatMessages.scrollHeight;
    });

    chatForm.addEventListener('submit', e => {
      e.preventDefault();
      if (!currentChat) return alert("Select a chat or group first!");
      const msg = messageInput.value;
      if (msg.trim() !== "") {
        socket.emit('chatMessage', { chat: currentChat, type: currentChatType, username: '<%= username %>', text: msg });
        messageInput.value = '';
        messageInput.focus();
      }
    });
  </script>
</body>
</html>
